= form_for @chatroom do |f|
  -if @chatroom.errors.any?
    #error_explanation
      %h2= "#{pluralize(@chatroom.errors.count, "error")} prohibited this chatroom from being saved:"
      %ul
        - @chatroom.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :radius
    = f.number_field :radius
  .field
    = f.hidden_field :lat, :value => @user.lat
  .field
    = f.hidden_field :long,:value => @user.long
  .actions
    = f.submit 'Save'
